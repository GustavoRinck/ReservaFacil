classDiagram
    class Usuario {
        -String id
        -String nome
        -String email
        -String tipo
        +fazerReserva()
        +cancelarReserva()
        +verReservas()
    }

    class Professor {
        -String departamento
        -String matricula
    }

    class Aluno {
        -String curso
        -String matricula
        -Integer semestre
    }

    class Administrador {
        -String nivelAcesso
        +gerarRelatorio()
        +gerenciarReservas()
        +armazenarReserva()
    }

    class Reserva {
        -String idReserva
        -Date data
        -Time horarioInicio
        -Time horarioFim
        -String status
        +criarReserva()
        +cancelarReserva()
        +alterarHorario()
    }

    class Sala {
        -String idSala
        -String numero
        -String localizacao
        -Integer capacidade
        -String[] recursos
        -Integer usoCount
        +verDisponibilidade()
        +incrementarUso()
    }

    class Relatorio {
        -String idRelatorio
        -Date dataGeracao
        -String tipo
        +gerarRelatorioSalas()
        +gerarRelatorioReservas()
    }

    class SistemaReserva {
        -List~Reserva~ reservas
        -List~Sala~ salas
        +armazenarReserva()
        +verSalasMaisUsadas()
        +validarHorario()
    }

    Usuario <|-- Professor
    Usuario <|-- Aluno
    Usuario <|-- Administrador
    Usuario "1" -- "*" Reserva
    Reserva "1" -- "1" Sala
    SistemaReserva "1" -- "*" Reserva
    SistemaReserva "1" -- "*" Sala
    Administrador --> Relatorio
    SistemaReserva --> Relatorio
